@model online_store_app.Models.ProductReview

<!-- Your Razor view content here -->


<h2>Review Product</h2>

<form asp-action="Review" method="post">
    <input type="hidden" asp-for="ProductId" />
    
    <div>
        <label asp-for="Rating">Rating (1-5):</label>
        <input asp-for="Rating" />
    </div>

    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
    </div>

    <div>
        <label asp-for="Content">Comment:</label>
        <textarea asp-for="Content"></textarea>
    </div>

    <button type="submit">Submit Review</button>
</form>
